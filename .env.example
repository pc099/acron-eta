# Asahi Inference Optimizer - Environment Variables
# Copy this file to .env and fill in your values.

# --- Backend ---
DATABASE_URL=postgresql+asyncpg://asahi:asahi_dev_password@localhost:5432/asahi
REDIS_URL=redis://localhost:6379
DEBUG=true

# --- LLM Provider API Keys ---
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# --- Embedding Provider ---
COHERE_API_KEY=...

# --- Auth (Clerk) ---
CLERK_SECRET_KEY=sk_test_...
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# --- Stripe ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRO_PRICE_ID=price_...

# --- Email (for invitations) ---
RESEND_API_KEY=re_...

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# --- Feature Store (Tecton) ---
TECTON_API_KEY=...

# --- Governance / Encryption ---
ASAHI_ENCRYPTION_KEY=...

# --- Kafka (optional) ---
ENABLE_KAFKA=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# --- ASAHI_* overrides ---
# Any config.yaml value can be overridden via ASAHI_<SECTION>_<KEY>.
# Examples:
#   ASAHI_API_PORT=9000
#   ASAHI_CACHE_TTL_SECONDS=3600
#   ASAHI_ROUTING_DEFAULT_QUALITY_THRESHOLD=4.0
#   ASAHI_TRACKING_LOG_DIR=data/custom_logs
